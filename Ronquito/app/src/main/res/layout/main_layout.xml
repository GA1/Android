<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@drawable/snoring"-->

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:text="@string/tip"
        />
    <Button
        android:id="@+id/increaseMicSensitivityButton"
        android:layout_below="@id/tip"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increase_sensitivity"
        android:onClick="onIncreaseClick"
        style="@style/blacky"
        />
    <Button
        android:id="@+id/lowerMicSensitivityButton"
        android:layout_below="@id/increaseMicSensitivityButton"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lower_sensitivity"
        android:onClick="onLowerClick"
        style="@style/blacky"
        />
</RelativeLayout>